#!/bin/sh -e

USER_ID="cascade"

create_user() {
    if id ${USER_ID} > /dev/null 2>&1; then return; fi
    adduser --system --home /var/lib/${USER_ID} --group ${USER_ID}
}

case "$1" in
configure)
    create_user
    mkdir -p /etc/cascade/policies
    chown -R ${USER_ID}: /etc/cascade
    ;;
esac

#DEBHELPER#
